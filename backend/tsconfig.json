{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "config/*": ["src/config/*"],
      "models/*": ["src/models/*"],
      "controllers/*": ["src/controllers/*"],
      "repositories/*": ["src/repositories/*"],
      "services/*": ["src/services/*"],
      "routes/*": ["src/routes/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
